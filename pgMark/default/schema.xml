<?xml version="1.0"?>
<pgmark>
    <types>
        <type name="pangenome">
            <count>
                <fixed>
                    1
                </fixed>
            </count>
            <relations>

            </relations>
            <attributes>
                <attribute name="num_genomes" unique="false" required="true">
                    <numeric min="0" max="5">
                        <exponentialDistribution scale="26000"/>
                    </numeric>
                </attribute>
            </attributes>
        </type>
        <type name="genome">
            <count>
                <fixed>
                    100
                </fixed>
            </count>
            <relations>

            </relations>
            <attributes>
                <attribute name="number" unique="true" required="true">
                    <numeric>
                        <uniformDistribution min="0" max="100"/>
                    </numeric>
                </attribute>
                <attribute name="num_sequences" unique="false" required="true">
                    <numeric min="0" max="5">
                        <exponentialDistribution scale="26000"/>
                    </numeric>
                </attribute>
            </attributes>
        </type>
        <type name="mRNA">
            <count>
                <fixed>
                    100
                </fixed>
            </count>
            <relations>

            </relations>
            <attributes>
                <attribute name="gnome" unique="true" required="true">
                    <numeric>
                        <uniformDistribution min="0" max="10"/>
                    </numeric>
                </attribute>
                <attribute name="sequence" unique="false" required="true">
                    <numeric>
                        <uniformDistribution min="0" max="10"/>
                    </numeric>
                </attribute>
                <attribute name="longest_transcript" unique="false" required="true">
                    <numeric min="0" max="500">
                        <exponentialDistribution scale="26000"/>
                    </numeric>
                </attribute>
                <attribute name="protein_ID" unique="false" required="true">
                    <numeric min="0" max="5">
                        <exponentialDistribution scale="26000"/>
                    </numeric>
                </attribute>
                <attribute name="length" unique="false" required="true">
                    <numeric min="0" max="5">
                        <exponentialDistribution scale="26000"/>
                    </numeric>
                </attribute>
            </attributes>
        </type>
        <type name="sequence">
            <count>
                <fixed>
                    100
                </fixed>
            </count>
            <relations>

            </relations>
            <attributes>
                <attribute name="phasing_assigned" unique="false" required="true">
                    <categorical>
                        <category>true</category>
                        <category>false</category>
                    </categorical>
                </attribute>
                <attribute name="identifier" unique="false" required="true">
                    <regex>[A-Z][a-z]{1,40}</regex>
                </attribute>
                <attribute name="genome" unique="false" required="true">
                    <numeric>
                        <uniformDistribution min="0" max="100"/>
                    </numeric>
                </attribute>
                <attribute name="number" unique="false" required="true">
                    <numeric min="0" max="5">
                        <exponentialDistribution scale="26000"/>
                    </numeric>
                </attribute>
                <attribute name="phasing_chromosome" unique="false" required="true">
                    <numeric min="0" max="5">
                        <exponentialDistribution scale="26000"/>
                    </numeric>
                </attribute>
                <attribute name="phasing_ID" unique="false" required="true">
                    <regex>\d{1}_(unphased|[a-z])</regex>
                </attribute>
            </attributes>
        </type>



    </types>
    <predicates>
        <predicate name="has_homolog">

        </predicate>
    </predicates>
</pgmark>